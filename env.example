# Application Settings
PROJECT_NAME=Automated Trading Bot Platform
VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true

# API Settings
API_V1_STR=/api/v1
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=11520  # 8 days

# CORS Settings
ALLOWED_HOSTS=["http://localhost:3000", "http://localhost:8000", "*"]

# Database Settings
DATABASE_URL=postgresql://trading_user:trading_password@localhost:5432/trading_bot
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30
POSTGRES_SERVER=localhost

# Redis Settings
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# RabbitMQ Settings
RABBITMQ_URL=amqp://trading_user:trading_password@localhost:5672/

# Exchange API Settings
# Binance
BINANCE_API_KEY=your_binance_api_key
BINANCE_SECRET_KEY=your_binance_secret_key
BINANCE_TESTNET=true
BINANCE_API_SECRET=your_binance_api_secret
BINANCE_TESTNET_API_KEY=your_binance_testnet_api_key
BINANCE_TESTNET_API_SECRET=your_binance_testnet_api_secret

# Gate.io
GATEIO_API_KEY=your_gateio_api_key
GATEIO_SECRET_KEY=your_gateio_secret_key

# KuCoin
KUCOIN_API_KEY=your_kucoin_api_key
KUCOIN_SECRET_KEY=your_kucoin_secret_key
KUCOIN_PASSPHRASE=your_kucoin_passphrase
KUCOIN_SANDBOX_PASSWORD=your-sandbox-password

# BingX
BINGX_API_KEY=your_bingx_api_key
BINGX_SECRET_KEY=your_bingx_secret_key

# Bitget
BITGET_API_KEY=your_bitget_api_key
BITGET_SECRET_KEY=your_bitget_secret_key
BITGET_PASSPHRASE=your_bitget_passphrase

# Email Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
SMTP_TLS=true

# File Upload Settings
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760  # 10MB

# Trading Settings
DEFAULT_LEVERAGE=1
MAX_LEVERAGE=100
MIN_ORDER_SIZE=0.001
MAX_ORDER_SIZE=1000000

# Backtesting Settings
BACKTEST_DATA_DIR=data/backtest
MAX_BACKTEST_DAYS=365

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Security Settings
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_DIGITS=true
PASSWORD_REQUIRE_SPECIAL=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# WebSocket Settings
WEBSOCKET_PING_INTERVAL=20
WEBSOCKET_PING_TIMEOUT=20

# Frontend Settings
NEXT_PUBLIC_API_URL=http://localhost:8000 